<Window x:Class="Lab8_SQL.RemoveForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8_SQL"
        mc:Ignorable="d"
        Title="RemoveForm" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" FontSize="30" Margin="0,30,0,0" TextWrapping="Wrap" Text="Remove" VerticalAlignment="Top"/>
        <TextBox x:Name="RemoveId" HorizontalAlignment="Center" Margin="0,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="337" Height="51" TextChanged="RemoveId_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" FontSize="20" Margin="234,110,0,0" TextWrapping="Wrap" Text="Enter ID" VerticalAlignment="Top"/>
        <Button Content="Delete" HorizontalAlignment="Left" FontSize="30" Margin="322,255,0,0" VerticalAlignment="Top" Height="71" Width="142" Click="Button_Click"/>


    </Grid>
</Window>
