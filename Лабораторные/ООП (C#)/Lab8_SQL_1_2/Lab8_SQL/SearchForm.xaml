<Window x:Class="Lab8_SQL.SearchForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab8_SQL"
        mc:Ignorable="d"
        Title="SearchForm" Height="450" Width="800">
    <Grid>
        <StackPanel Width="400" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="Имя"/>
                <TextBox x:Name="NameT"/>
            </StackPanel>

            <StackPanel>
                <Label Content="дата рождения"/>
                <TextBox x:Name="dateBT"/>
            </StackPanel>

            <Button Content="Искать" Height="20" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
