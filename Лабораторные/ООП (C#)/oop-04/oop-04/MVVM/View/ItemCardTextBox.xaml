<UserControl x:Class="oop_04.MVVM.View.ItemCardTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:oop_04.MVVM.View"
             xmlns:vm="clr-namespace:oop_04.MVVM.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <TextBox x:Name="InnerTextBox"
             TextWrapping="Wrap"
             Text="{Binding Text, RelativeSource={RelativeSource AncestorType={x:Type local:ItemCardTextBox}}}"
             IsReadOnly="True"
             BorderThickness="0"
             Background="Transparent"
             Height="auto"
             Width="auto"
             Foreground="White"
             FontSize="16"
             FontWeight="Bold"
             Margin="0,5,0,0"
             VerticalContentAlignment="Center"
             HorizontalAlignment="{Binding HorizontalAlignment}"
             HorizontalContentAlignment="{Binding HorizontalContentAlignment}"/>
</UserControl>
